<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ImageView_set_hand"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_replay_24"
            android:scaleType="fitCenter"
            />

        <ImageView
            android:id="@+id/hand_animation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/hand_animation"
            android:scaleType="centerInside"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:weightSum="100"
    >

        <ImageButton
            android:id="@+id/ImageButton_gawe"
            android:tag="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:src="@drawable/com_gawe"
            android:scaleType="fitCenter"
            android:backgroundTint="#FFEB38"
            android:onClick="btn_click"
            />
        <ImageButton
            android:id="@+id/ImageButton_bawe"
            android:tag="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:src="@drawable/com_bawe"
            android:scaleType="fitCenter"
            android:backgroundTint="#FFEB38"
            android:onClick="btn_click"
            />
        <ImageButton
            android:id="@+id/ImageButton_bo"
            android:tag="3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:src="@drawable/com_bo"
            android:scaleType="fitCenter"
            android:backgroundTint="#FFEB38"
            android:onClick="btn_click"
            />
        <ImageButton
            android:id="@+id/ImageButton_replay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:src="@drawable/ic_baseline_replay_24"
            android:scaleType="fitCenter"
            android:backgroundTint="#FFEB38"
            android:onClick="btn_click"
            />

    </LinearLayout>

</LinearLayout>